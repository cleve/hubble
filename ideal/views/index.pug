extends layout

block content
  div.carousel.slide#carouselExampleIndicators(data-ride="carousel")
    ol.carousel-indicators
      li.active#carouselExampleIndicators(data-target="#", data-slide-to="0")
      li.active#carouselExampleIndicators(data-target="#", data-slide-to="1")
      li.active#carouselExampleIndicators(data-target="#", data-slide-to="2")
    .carousel-inner
      div.carousel-item.active
        img.d-block.w-100(src="/images/bimbo_big1.jpg" alt="...")
      div.carousel-item
        img.d-block.w-100(src="/images/bimbo_big2.jpg" alt="...")
      div.carousel-item
        img.d-block.w-100(src="/images/bimbo_big3.jpg" alt="...")
      a.carousel-control-prev(href="#carouselExampleIndicators" role="button" data-slide="prev")
      span.carousel-control-prev-icon(aria-hidden="true")
      span.sr-only Previous
      
      a.carousel-control-next(href="#carouselExampleIndicators" role="button" data-slide="next")
      span.carousel-control-next-icon(aria-hidden="true")
      span.sr-only Next

  .container
    div.row(style="margin-top:40px;")
      div.col-sm
        div.card
          div.card-body
            h5.card-title Administrar perfiles
            p.card-text Agregar/Eliminar usuarios, cambiar contraeñas.
            a.btn.btn-primary(href="#") Administrar
      
      div.col-sm
        div.card
          div.card-body
            h5.card-title Administrar premios
            p.card-text Revisar y puntuar imágenes cargadas por vendedores.
            a.btn.btn-primary(href="#") Administrar
            
    div.jumbotron(style="margin-top:20px")
      h1.display-4 Calificar imágenes
      p.lead Revisar y puntuar imágenes cargadas por vendedores.
      hr.my-4
      p Calificaciones en una escala del 1 al 10.
      a.btn.btn-primary.btn-lg(href="/images" role="button") Mostrar imágenes
    
